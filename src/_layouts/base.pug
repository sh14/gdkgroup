include ../_modules/header/header
include ../_modules/metrics/metrics
include ../_modules/button/button
include ../_modules/icon/icon
include ../_modules/link/link
include ../_modules/footer/footer

block consts
    - var domain = 'gdkestate.ru'
    - var url = 'https://'+domain+'/'
    - var siteTitle = '- GDKEstate'
    - var language = 'ru'

//- Custom Configuration
block config
    //- Setup site's base URL to match the "baseUrl" key within `package.json`
    //- Otherwise default to relative pathing
    - var baseUrl = config.baseUrl || './'

    - var page = config.page || ''
    - var title = config.title ? config.title + siteTitle:''
    - var description = config.description || ''
    - var canonical = config.canonical ? config.canonical:url + site.filename

doctype html

<!--[if lt IE 9]>
<html class='lt-ie9 no-js' lang='#{language}'>
<![endif]-->
<!--[if gte IE 9]><!-->
<html class='no-js' lang='#{language}'>
<!--<![endif]-->

head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title #{title}
    meta(name='description', content=description)
    meta(name='canonical', content=canonical)
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(property="og:url"                content=canonical )
    meta(property="og:type"               content="article" )
    meta(property="og:title"              content=title )
    meta(property="og:description"        content=description )
    meta(property="og:image"              content=url+'assets/images/share-thumb.png')
    block stylesheets
        link(rel='stylesheet', href= '/assets/styles/main.css')
    +metrics
body
    <!--[if lt IE 9]>
    <p class='browsehappy'>You are using an <strong>outdated</strong> browser. Please <a href='http://browsehappy.com/'>upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    .page
        +header
        block content

        +footer
    block scripts
        script(src= '/assets/scripts/main.js')

</html>
